<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/bootstrap.php" colors="true">
	<testsuites>
		<testsuite name="Scurl">
			<directory suffix="Test.php" phpVersion="5.4" phpVersionOperator=">=">./tests/src</directory>
		</testsuite>
	</testsuites>
	<logging>
		<log type="coverage-html" 
			target="doc/coverage" 
			charset="UTF-8" 
			yui="true" 
			highlight="false" 
			lowUpperBound="35" 
			highLowerBound="70"
		/>
	</logging>
</phpunit>